<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Client" x:Class="Client.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>
    <Window.DataContext>
        <local:ViewModelApp/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Column="1" Grid.Row="0" Content="" HorizontalAlignment="Stretch"   Margin="5,0,-5,0" VerticalAlignment="Stretch"  Background="Azure" Source="{Binding CurrentPage}" NavigationUIVisibility="Hidden" Grid.RowSpan="2"/>
        <StackPanel Grid.Column="0" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Grid.RowSpan="2">
            <Button Content="Gantt" Click="Button_Click"/>
            <Button Content="Vols"/>
            <Button Content="Bagages" Click="Button_Click_Bagage"/>

        </StackPanel>

    </Grid>
</Window>
